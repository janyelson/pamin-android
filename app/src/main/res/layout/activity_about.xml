<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_500"

    tools:context="br.lavid.pamin.com.pamin.activities.AboutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_indigo_500"
        android:elevation="3dp"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
        app:title="Sobre" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/pamin_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Pamin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/md_white_1000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:text="Patrimônio, Memória e Interatividade"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/aboutPaminBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/md_indigo_400"
        android:elevation="2dp"
        android:shadowColor="#00000000"

        android:text="Sobre o Pamin"
        android:textColor="@color/md_white_1000" />

    <Button
        android:id="@+id/aboutDevBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/aboutPaminBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@color/md_indigo_400"
        android:elevation="2dp"
        android:shadowColor="#00000000"
        android:text="Desenvolvedores"
        android:textColor="@color/md_white_1000" />

    <Button
        android:id="@+id/about_userTermsBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/aboutDevBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@color/md_indigo_400"
        android:elevation="2dp"
        android:shadowColor="#00000000"
        android:text="Termos de Uso"
        android:textColor="@color/md_white_1000" />

    <Button
        android:id="@+id/about_privacityPolicyBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/about_userTermsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@color/md_indigo_400"
        android:elevation="2dp"
        android:shadowColor="#00000000"
        android:text="Política de Privacidade"
        android:textColor="@color/md_white_1000" />

</RelativeLayout>
